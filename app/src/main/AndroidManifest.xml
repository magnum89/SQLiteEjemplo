<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bolivia.sqliteextreme"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.bolivia.sqliteextreme.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.bolivia.sqliteextreme.RegistroActivity"
            android:label="@string/title_activity_registro" >
        </activity>
        <activity
            android:name="com.bolivia.sqliteextreme.RegistrosActivity"
            android:label="@string/title_activity_registros" >
        </activity>
    </application>

</manifest>
